        // üêõ DEBUG LOG FUNCTION - Uncomment if needed
        function addDebugLog(message) {
            const debugLog = document.getElementById('debug-log');
            if (debugLog) {
                const time = new Date().toLocaleTimeString();
                debugLog.innerHTML += `<div>${time}: ${message}</div>`;
